                            <td class="label-td" colspan="2">
                                <label asp-for="Email" class="form-label">Email: </label>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                @Model.Email'<br><br>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                <label asp-for="Nic" class="form-label">NIC: </label>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                @Model.Nic'<br><br>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                <label asp-for="PhoneNumber" class="form-label">Telephone: </label>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                @Model.PhoneNumber<br><br>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                <label asp-for="Address" class="form-label">Address: </label>

                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                @Model.Address<br><br>
                            </td>
                        </tr>
                        <tr>

                            <td class="label-td" colspan="2">
                                <label asp-for="DateOfBirth" class="form-label">Date of Birth: </label>
                            </td>
                        </tr>
                        <tr>
                            <td class="label-td" colspan="2">
                                @Model.DateOfBirth<br><br>
                            </td>

                        </tr>
                        <tr>
                            <td colspan="2">
                                <a asp-controller="Doctor" asp-action="Patient"><input type="button" value="OK"
                                        class="login-btn btn-primary-soft btn"></a>
                            </td>

                        </tr>
                    </table>
                </div>
            </center>
            <br><br>
        </div>
    </div>
}
</div>