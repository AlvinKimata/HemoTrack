@model PatientDashboardVM

@{
    ViewData["Title"] = "Doctor dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="dash-body">
    <table border="0" width="100%" style=" border-spacing: 0;margin:0;padding:0;margin-top:25px; ">
        <tr>
            <td width="13%">

                <a  asp-action="Index">
                    <button class="login-btn btn-primary-soft btn btn-icon-back"
                        style="padding-top:11px;padding-bottom:11px;margin-left:20px;width:125px">
                        <font class="tn-in-text">Back</font>
                    </button>
                </a>

            </td>
            <td>

            </td>
            <td width="15%">
                <p style="font-size: 14px;color: rgb(119, 119, 119);padding: 0;margin: 0;text-align: right;">
                    Today's Date
                </p>
                <p class="heading-sub12" style="padding: 0;margin: 0;">
                    @DateTime.Now.ToShortDateString()
                </p>
            </td>
            <td width="10%">
                <button class="btn-label" style="display: flex;justify-content: center;align-items: center;"><img
                        src="~/img/calendar.svg" width="100%"></button>
            </td>


        </tr>


        <tr>
            <td colspan="4" style="padding-top:10px;">
                <p class="heading-main12" style="margin-left: 45px;font-size:18px;color:rgb(49, 49, 49)">
                    Total Patients (@Model.Patients.Count())
                </p>
            </td>

        </tr>
    </table>

    </center>
    </td>

    </tr>

    <tr>
        <td colspan="4">
            <center>
                <div class="abc scroll">
                    <table width="93%" class="sub-table scrolldown" style="border-spacing:0;">
                        <thead>
                            <tr>
                                <th class="table-headin">


                                    Name

                                </th>
                                <th class="table-headin">


                                    NIC

                                </th>
                                <th class="table-headin">


                                    Telephone

                                </th>
                                <th class="table-headin">
                                    Email
                                </th>

                                <th class="table-headin">

                                    Events

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var totalPatients = Model.Patients.Count();
                            }
                            @if (totalPatients == 0)
                            {
                                <tr>
                                    <td colspan="4">
                                        <br><br><br><br>
                                        <center>
                                            <img src="~/img/notfound.svg" width="25%">

                                            <br>
                                            <p class="heading-main12"
                                                style="margin-left: 45px;font-size:20px;color:rgb(49, 49, 49)">We couldn't
                                                find anything related to your keywords !</p>
                                            <a class="non-style-link" sap-action="Doctor" asp-action="Patient"><button
                                                    class="login-btn btn-primary-soft btn"
                                                    style="display: flex;justify-content: center;align-items: center;margin-left:20px;">&nbsp;
                                                    Show all Patients &nbsp;</button>
                                            </a>
                                        </center>
                                        <br><br><br><br>
                                    </td>
                                </tr>
                            }

                            @foreach (var patient in Model.Patients)
                            {
                                <tr style="font-weight:600;">
                                    <td> &nbsp;
                                        @patient.FirstName
                                    </td>

                                    <td> &nbsp;
                                        @patient.Nic
                                    </td>

                                    <td> &nbsp;
                                        @patient.PhoneNumber
                                    </td>

                                    <td> &nbsp;
                                        @patient.Email
                                    </td>


                                    <td>
                                        <div style="display:flex;justify-content: center;">

                                            <a href="#" class="non-style-link">
                                                <button class="btn-primary-soft btn button-icon btn-view"
                                                    onclick="toggleViewPopup(Id = '@patient.Id')"
                                                    style="padding-left: 40px;padding-top: 12px;padding-bottom: 12px;margin-top: 10px;">
                                                    <font class="tn-in-text">View</font>
                                                </button>

                                                <div id="myPopup1_@patient.Id" style="display: none;">
                                                    @await Html.PartialAsync("~/Views/Administrator/Partials/_ViewPatientPartial.cshtml", @patient)
                                                </div>
                                            </a>

                                            &nbsp;&nbsp;

                                            <a href="#" class="non-style-link">
                                                <button class="btn-primary-soft btn button-icon btn-view"
                                                    onclick="toggleEditPopup(Id = '@patient.Id')"
                                                    style="padding-left: 40px;padding-top: 12px;padding-bottom: 12px;margin-top: 10px;">
                                                    <font class="tn-in-text">Edit</font>
                                                </button>
                                                <div id="myPopup2_@patient.Id" style="display: none;">
                                                    @await Html.PartialAsync("~/Views/Administrator/Partials/_EditPatientPartial.cshtml", @patient)
                                                </div>
                                            </a>

                                            &nbsp;&nbsp;

                                            <a href="#" class="non-style-link">
                                                <button class="btn-primary-soft btn button-icon btn-view" onclick="toggleDeletePopup(Id = '@patient.Id')"
                                                    style="padding-left: 40px;padding-top: 12px;padding-bottom: 12px;margin-top: 10px;">
                                                    <font class="tn-in-text">Delete</font>
                                                </button>
                                                <div id="myPopup3_@patient.Id" style="display: none;">
                                                    @await Html.PartialAsync("~/Views/Administrator/Partials/_DeletePatientPartial.cshtml", @patient)
                                                </div>

                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </center>
        </td>
    </tr>

</div>