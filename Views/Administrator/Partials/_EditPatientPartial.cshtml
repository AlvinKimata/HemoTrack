@model Patient;

@{
    ViewData["Title"] = "Edit doctor's details";
    Layout = null;
}

<div id="myPopup2_@Model.Id" class="overlay">
    <div class="popup">
        <center>
            <h2></h2>
            <a class="close" href="#" onclick="toggleEditPopup(Id = '@Model.Id')">&times;</a>
            <div class="content">
                eDoc Web App<br>

            </div>
            <form method="post" action="">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div style="display: flex;justify-content: center;">
                <input type="hidden" name="action" value="modify">
                <input type="hidden" class="input-text" asp-for="@Model.Email" value = "@Model.Email">

                    <table width="80%" class="sub-table scrolldown add-doc-form-container" border="0">

                        <tr>
                            <td>
                                <p style="padding: 0;margin: 0;text-align: left;font-size: 25px;font-weight: 500;">Edit
                                    Details</p>
                            </td>
                        </tr>

                        <tr>
                            <td class="label-td" colspan="2">
                                <p>First Name</p>
                                <input asp-for="FirstName" type="text" id="name" class="input-text"
                                            placeholder="First name" aria-required="true">
                            </td>
                        </tr>
                                

                        <tr>
                            <td class="label-td" colspan="2">
                                <p>Last Name</p>
                                <input asp-for="LastName" type="text" class="input-text" id="name"
                                    placeholder="Last name" aria-required="true">
                            </td>
                            <br>
                        </tr>

                        <tr>
                            <td class="label-td" colspan="2">
                                <br>
                                <label asp-for="Email" disabled class="form-label">Email: </label> <br>
                                <input class="input-text" disabled colspan="2" asp-for="Email" aria-required="true">
                                </input>
                            </td>
                        </tr>

                        <tr>
                            <td class="label-td" colspan="2">
                                <br>
                                <label asp-for="PhoneNumber" class="form-label">Telephone: </label><br>
                                <input class="input-text" colspan="2" asp-for="PhoneNumber" aria-required="true"><br>
                                </input>
                            </td>
                        </tr>

                        <tr>
                            <td class="label-td" colspan="2">
                                <label class="form-label">NIC: </label>
                            </td>
                        </tr>

                        <tr>
                            <td class="label-td" colspan="2">
                                <input type="text" name="Nic" class="input-text" asp-for="Nic"
                                    aria-required="true"><br>
                                <span asp-validation-for="Nic" class="text-danger"></span>
                            </td>
                        </tr>


                        <tr>
                            <td class="label-td" colspan="2">
                                <br>
                                <label asp-for="DateOfBirth" class="form-label">Date Of Birth: </label><br>
                                <input class="input-text" type = "date" colspan="2" asp-for="DateOfBirth" aria-required="true">
                                <br>
                            </td>
                            <br>
                        </tr>

                        <tr>
                            <td colspan="2">
                                <a href="#">
                                    <br>
                                    <button type="submit" class="login-btn btn-primary-soft btn">OK</button>
                                </a>
                            </td>
                        </tr>
                    </table>

                </div>
            </form>
        </center>
        <br><br>
    </div>
</div>
