@model Blog

@{
    ViewData["Title"] = "Add a  post";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<h2>Add the post</h2>
<section class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <center>
                    <div class="down-contact">
                        <div class="row">
                            <div class="col-lg-10">
                                <div class="sidebar-item contact-form">
                                    <div class="sidebar-heading">
                                        <h2>Add the blog</h2>
                                    </div>
                                    <div class="content">
                                        <form asp-action="Create" method="post">
                                            <div asp-validation-sumary="All" class="text-danger"></div>
                                            <div class="row">
                                                <div class="col-md-6 col-sm-12">
                                                    <fieldset>
                                                        <input asp-for="BlogName"  type="text" id="name" placeholder="Blog name"
                                                            aria-required="true">
                                                    </fieldset>
                                                </div>

                                                <div class="col-md-6 col-sm-12">
                                                    <fieldset>
                                                        <input asp-for="Title" type="text" id="email"
                                                            placeholder="Blog title" aria-required="true">
                                                    </fieldset>
                                                </div>

                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <textarea rows="6" id="message" asp-for="Content"
                                                            placeholder="Blog content" aria-required="true"></textarea>
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <button type="submit" id="form-submit" class="main-button">Add post</button>
                                                    </fieldset>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/assets/js/custom.js"></script>
    <script src="~/assets/js/owl.js"></script>
    <script src="~/assets/js/slick.js"></script>
    <script src="~/assets/js/isotope.js"></script>
    <script src="~/assets/js/accordions.js"></script>
    <script src="~/js/CustomScript.js"></script>

    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
        function clearField(t) {                   //declaring the array outside of the
            if (!cleared[t.id]) {                      // function makes it static and global
                cleared[t.id] = 1;  // you could use true and false, but that's more typing
                t.value = '';         // with more chance of typos
                t.style.color = '#fff';
            }
        }
    </script>
}