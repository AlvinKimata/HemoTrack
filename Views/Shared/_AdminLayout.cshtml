<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/animations.css">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <script src="~/js/site.js"></script>
    <script src="~/js/CustomScript.js"></script>

    <title>Dashboard</title>
    <style>
        .dashbord-tables {
            animation: transitionIn-Y-over 0.5s;
        }

        .filter-container {
            animation: transitionIn-Y-bottom 0.5s;
        }

        .sub-table {
            animation: transitionIn-Y-bottom 0.5s;
        }
    </style>


</head>

<body>
    <div class="container">
        <div class="menu">
            <table class="menu-container" border="0">
                <tr>
                    <td style="padding:10px" colspan="2">
                        <table border="0" class="profile-container">
                            <tr>
                                <td width="30%" style="padding-left:20px">
                                    <img src="~/img/user.png" alt="" width="100%" style="border-radius:50%">
                                </td>
                                <td style="padding:0px;margin:0px;">
                                    <p class="profile-title">Administrator</p>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <form method="post" asp-controller = "Account" asp-action = "Logout">
                                        <button type="submit" value="Log out"
                                            class="logout-btn btn-primary-soft btn">Log out</button>
                                    </form>

                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr class="menu-row">
                    <td class="menu-btn menu-icon-dashbord menu-active menu-icon-dashbord-active">
                        <a asp-action="Index" asp-controller="Administrator"
                            class="non-style-link-menu non-style-link-menu-active">
                            <div>
                                <p class="menu-text">Dashboard</p>
                        </a>
        </div></a>
        </td>
        </tr>
        <tr class="menu-row">
            <td class="menu-btn menu-icon-doctor ">
                <a asp-controller="Administrator" asp-action="Doctors" class="non-style-link-menu ">
                    <div>
                        <p class="menu-text">Doctors</p>
                </a>
    </div>
    </td>
    </tr>
    <tr class="menu-row">
        <td class="menu-btn menu-icon-appoinment">
            <a asp-controller="Administrator" asp-action="Appointment" class="non-style-link-menu">
                <div>
                    <p class="menu-text">Appointment</p>
            </a></div>
        </td>
    </tr>
    <tr class="menu-row">
        <td class="menu-btn menu-icon-patient">
            <a asp-controller="Administrator" asp-action="Patient" class="non-style-link-menu">
                <div>
                    <p class="menu-text">Patients</p>
            </a></div>
        </td>
    </tr>

    <tr class="menu-row">
        <td class="menu-btn menu-icon-settings">
            <a asp-controller="Administrator" asp-action="ListRoles" class="non-style-link-menu">
                <div>
                    <p class="menu-text">Manage roles</p>
            </a></div>
        </td>
    </tr>

    <tr class="menu-row">
        <td class="menu-btn menu-icon-appoinment btn-primary-soft">
            <a asp-controller="Blog" asp-action="Index" class="non-style-link-menu">
                <div>
                    <p class="menu-text"><font>Manage Educational Materials</font></p>
            </a></div>
        </td>
    </tr>
    </table>
    </div>
    @RenderBody()
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/js/CustomScript.js"></script>
}