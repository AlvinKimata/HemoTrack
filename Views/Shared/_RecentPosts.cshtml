@model IEnumerable<Blog>

<div class="col-lg-4">
    <div class="sidebar">
        <div class="row">
            <div class="col-lg-12">
                <div class="sidebar-item recent-posts">
                    <div class="sidebar-heading">
                        <h2>Recent Posts</h2>
                    </div>
                    <div class="content">
                        <ul>
                            <li>
                                @foreach (var post in Model)
                                {
                                    <a asp-action = "ViewContent" asp-controller = "Blog" asp-route-id = "@post.Id">
                                        <h5>@post.Title</h5>
                                        <span>@post.CreateTime</span>
                                    </a>
                                    <br>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>