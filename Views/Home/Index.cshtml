@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}
<div class="container-fluid">
    <div class="landing-page mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="image-section">
                    <img src="~/img/Hospital building-rafiki.png" alt="Landing page image" class="img-fluid" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="content-section justify-content-align-content-around text-center m-5">
                    <h1 class="display-1 text-primary fw-bolder" style="font-family: 'Cabin', sans-serif;">
                        WE CARE ABOUT YOUR HEALTH
                    </h1>
                    <p class="lead">We provide a comprehensive and integrated hospital management system to streamline
                        your hospital operations and enhance patient care.</p>
                    <a class="btn btn-primary btn-lg" href="#home-section" role="button">Learn more</a>
                </div>
            </div>
        </div>
    </div>
    <h3 class="text-center m-5" id="home-section"></h3>

    <div class="landing-page m-5">
        <div class="row">

            <div class="col-md-6">
                <div class="content-section justify-content-align-content-around">
                    <h1 class="display-4">Who We Are</h1>

                    <p class="lead">With a strong emphasis on quality assurance, patient safety, and continuous
                        improvement, we are committed to helping healthcare organizations achieve operational excellence
                        and deliver the highest standard of care.
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="image-section">
                    <img src="~/img/forming team leadership-rafiki.png" alt="about page image" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
    <h3 class="text-center m-5">Our Services</h3>
    <div class="row row-cols-1 row-cols-md-4 g-4 justify-content-center m-2">
        <div class="col" style="width: 18rem;">
            <div class="card h-100">
                <img src="~/img/Oncology patient-rafiki.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-center text-primary">Patient Management</h5>
                    <p class="card-text">The system allows for registration of patients, and management of patient
                        demographics including personal details.</p>
                </div>
            </div>
        </div>
        <div class="col" style="width: 18rem;">
            <div class="card h-100">
                <img src="~/img/Doctors-rafiki.png" class="card-img-top mx-auto d-block" alt="..."
                    style="max-height: 200px;">
                <div class="card-body">
                    <h5 class="card-title text-center text-primary">Doctor Management</h5>
                    <p class="card-text text-center">The system allows efficient registration of doctors and adding them
                        to different departments.</p>
                </div>
            </div>
        </div>
        <div class="col" style="width: 18rem;">
            <div class="card h-100">
                <img src="~/img/Laboratory-rafiki.png" class="card-img-top mx-auto d-block" alt="..."
                    style="max-height: 200px;">
                <div class="card-body">
                    <h5 class="card-title text-center text-primary">Educational resources</h5>
                    <p class="card-text text-center">The system also offers educational materials to guide in the
                        handling and mitigation of sickle cell disease among patients.</p>
                </div>
            </div>
        </div>

    </div>
</div>